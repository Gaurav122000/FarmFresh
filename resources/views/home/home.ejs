        <div class="carousel-inner" style="border: solid 4px black;">
          <div class="carousel-item active">
            <!-- <img src="images/01.jpeg" class="d-block w-100" alt="..."> -->
            <video autoplay muted loop src="pictures/1-add-1c.mp4" type="video" class="d-block w-100"></video>
          </div>
          <div class="carousel-item">
            <!-- <img src="images/02.jpeg" class="d-block w-100" alt="..."> -->
            <video autoplay muted loop src="pictures/2-add-1c.mp4" type="video" class="d-block w-100"></video>
