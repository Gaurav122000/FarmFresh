    <!---------------------1 card---------------------------------------------->
    <h3 style="text-align: center; margin-top: 20px;">Best Deal's</h3>
    <hr />
    <div class="container">
      <div class="row">
        <div class="col-lg-3 col-md-3 col-sm-6 col-6">
          <div class="card shadow-lg mb-4">
            <img src="pictures\2,1 card.gif" class="card-img-top" alt="..." />
            <div class="card-body">
              <h5 class="card-title">Onion</h5>
              <p class="card-text  text-truncate">Buy onions at a cheap price</p>
              <a href="/category/product/item?q=Onion (500 gram)" class="btn btn-primary">Shop now</a>
            </div>
          </div>
        </div>

        <div class="col-lg-3 col-md-3 col-sm-6 col-6">
          <div class="card shadow-lg mb-4">
            <img src="pictures\2,2 card.gif" class="card-img-top" alt="..." />
            <div class="card-body">
              <h5 class="card-title">Pineapple</h5>
              <p class="card-text text-truncate">
                Buy pineapple at a cheap price</p>
              <a href="/category/product/item?q=Pineapple" class="btn btn-primary">Shop now</a>
            </div>
          </div>
        </div>

        <div class=" col-lg-3 col-md-3 col-sm-6 col-6">
          <div class="card shadow-lg mb-4">
            <img src="pictures\2,3 card.gif" class="card-img-top" alt="..." />
            <div class="card-body">
              <h5 class="card-title">Paneer</h5>
